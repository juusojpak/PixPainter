<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?android:attr/buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sizeImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/secondaryColorCircleDescription"
        android:scaleType="center"
        android:src="@drawable/ic_brush_black_24dp"
        android:tint="@color/colorAccentDark"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%"/>

    <TextView
        android:id="@+id/sizeText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/sizeImage"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/darkest"
        app:layout_heightPercent="80%"
        app:layout_widthPercent="100%"/>

</android.support.percent.PercentRelativeLayout>
