<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?android:attr/buttonBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shapeIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/darkest"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="100%"/>

    <TextView
        android:id="@+id/fillIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:layout_below="@id/shapeIcon"
        android:gravity="center"
        android:textColor="@color/darkest"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="100%"/>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/shapeSizeArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/fillIcon"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="100%">

        <EditText
            android:id="@+id/heightEdit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:hint="@string/height"
            android:inputType="numberSigned"
            android:textColor="@color/darkest"
            android:textColorHint="@color/colorAccentDark"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="100%"/>

        <EditText
            android:id="@+id/widthEdit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/heightEdit"
            android:gravity="center"
            android:hint="@string/width"
            android:inputType="numberSigned"
            android:textColor="@color/darkest"
            android:textColorHint="@color/colorAccentDark"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="100%"/>

        <EditText
            android:id="@+id/radiusEdit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:hint="@string/radius"
            android:inputType="numberSigned"
            android:textColor="@color/darkest"
            android:textColorHint="@color/colorAccentDark"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="100%"/>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
